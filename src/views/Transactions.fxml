<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackpane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TransactionController">
    <children>
        <AnchorPane prefHeight="900.0" prefWidth="1680.0" style="-fx-background-color: #EEF5F9;" stylesheets="@../resources/css/Home.css">
            <children>

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1680.0" style="-fx-background-color: #FFFFFF;">
                    <effect>
                        <InnerShadow color="#ebe4e4" />
                    </effect>
                </HBox>

                <Label layoutX="10.0" layoutY="10.0" prefHeight="35.0" prefWidth="194.0" text="TRANSACTIONS" textFill="#1976d2">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>

                <AnchorPane layoutY="50.0" prefHeight="955.0" prefWidth="1680.0">
               <children>
                  <VBox layoutX="49.0" layoutY="78.0" prefHeight="828.0" prefWidth="1583.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <AnchorPane prefHeight="42.0" prefWidth="762.0">
                           <children>
                              <HBox layoutX="14.0" layoutY="8.0" prefHeight="27.0" prefWidth="308.0" spacing="20.0">
                                 <children>
                                    <ImageView fitHeight="29.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../resources/icons/common/table.png" />
                                       </image>
                                    </ImageView>
                                    <Label prefHeight="27.0" prefWidth="232.0" text="Transactions Table">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <JFXButton buttonType="RAISED" layoutX="1443.0" layoutY="9.0" onAction="#generateReport" prefHeight="23.0" prefWidth="98.0" text="REPORT">
                                 <graphic>
                                    <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../resources/icons/transactions/report.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </AnchorPane>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="563.0" spacing="60.0">
                           <children>
                              <JFXDatePicker fx:id="dpSearchFrom" defaultColor="#58b5fb" onMouseClicked="#filterbyDate" prefHeight="28.0" prefWidth="250.0" promptText="From" />
                              <JFXDatePicker fx:id="dpSearchTo" defaultColor="#58b5fb" onMouseClicked="#filterbyDate" prefHeight="28.0" prefWidth="250.0" promptText="To" />
                              <ImageView fitHeight="23.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvTransactions" prefHeight="678.0" prefWidth="1543.0" style="-fx-background-color: #FFFFFF;">
                           <columns>
                              <TableColumn fx:id="colId" prefWidth="75.0" text="ID #" />
                              <TableColumn fx:id="colAppointmentId" prefWidth="75.0" text="APPOINTMENT ID" />
                              <TableColumn fx:id="colDate" prefWidth="75.0" text="DATE" />
                              <TableColumn fx:id="colAmount" prefWidth="75.0" text="AMOUNT" />
                              <TableColumn fx:id="colCash" prefWidth="75.0" text="CASH" />
                              <TableColumn fx:id="colBalance" prefWidth="75.0" text="BALANCE" />
                              <TableColumn fx:id="colDiscount" prefWidth="75.0" text="DISCOUNT" />
                           </columns>
                           <VBox.margin>
                              <Insets left="20.0" right="20.0" top="10.0" />
                           </VBox.margin>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children></AnchorPane>

            </children>
        </AnchorPane>
    </children>
</StackPane>
